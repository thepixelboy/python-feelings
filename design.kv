#:kivy 2.0.0
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
            Button:
                text: "Login"
                on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                id: login_failed
                text: ""
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password?"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        Button:
            text: "Logout"
            on_press: root.logout()
        Label:
            text: "How do you feel today?"
        TextInput:
            hint_text: "Happy, sad, ..."
        Button:
            text: "Enlight me!"
        Label:
            text: ""


<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up for a space journey!"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful!"
        Button:
            text: "Return to Login page"
            on_press: root.go_to_login_screen()

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    LoginScreenSuccess:
        name: "login_screen_success"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"